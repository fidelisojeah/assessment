{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "<components>": ["src/components"],
            "<containers>": ["src/containers"],

            "<assets>": ["src/assets"],

            "<utils>": ["src/utils"],
            "<constants>": ["src/constants"],
            "<services>": ["src/services"]
        }
    },
    "exclude": ["node_modules"]
}
